{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "typecheck": {},
    "deploy": {
      "cache": false
      // TODO: see if we can actually cache the deploys
    },
    "test:unit": {},
    "test:unit:coverage": {
      "outputs": ["coverage/**"]
    },
    "lint": {},
    "lint:fix": {},
    "check-types": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
