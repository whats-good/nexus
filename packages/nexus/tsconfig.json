{
  "extends": "tsconfig/base.json",
  "exclude": ["dist", "build", "node_modules"],
  "include": [
    "./src/**/*.ts",
    "./vitest.config.ts",
    "test/**/*.ts",
    "tsup.config.ts"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["./src/lib/*"],
      "@test/*": ["./test/*"]
    }
  }
}
