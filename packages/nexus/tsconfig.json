{
  "extends": "tsconfig/base.json",
  "exclude": ["dist", "build", "node_modules"],
  "include": [
    "./src/**/*.ts",
    "./vitest.config.ts",
    "test/**/*.ts",
    "tsup.config.ts"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["es2017"],
    "resolveJsonModule": true,
    "baseUrl": ".",
    "target": "ES2015",
    "paths": {
      "@src/*": ["./src/*"],
      "@test/*": ["./test/*"],
      "@package.json": ["./package.json"]
    }
  }
}
