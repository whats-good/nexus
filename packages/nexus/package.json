{
  "name": "@whatsgood/nexus",
  "version": "0.2.0",
  "description": "A simple TypeScript proxy server for any Ethereum JSON RPC compliant blockchain",
  "private": false,
  "access": "public",
  "keywords": [
    "blockchain",
    "ethereum",
    "json-rpc",
    "proxy",
    "typescript"
  ],
  "author": {
    "name": "Kerem Kazan",
    "email": "kerem@whatsgood.dog"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whats-good/nexus"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup && pnpm api-extractor:local",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "prepublish": "turbo build --filter=@whatsgood/nexus",
    "typecheck": "tsc",
    "lint": "eslint src/",
    "lint:fix": "pnpm lint lint --fix",
    "test:unit": "vitest run --config ./vitest.config.ts",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "api-extractor:local": "api-extractor run --local --verbose",
    "api-documenter:generate": "api-documenter markdown --input-folder temp --output-folder docs"
  },
  "dependencies": {
    "@whatwg-node/server": "^0.9.16",
    "path-to-regexp": "^6.2.1",
    "vitest": "0.34.5",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.23.13",
    "@microsoft/api-extractor": "^7.38.4",
    "@types/express": "^4.17.18",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint-config-custom": "workspace:*",
    "express": "^4.18.2",
    "msw": "^1.3.2",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "tsup": "8.0.1",
    "typescript": "5.2.2"
  }
}
