{
  "name": "@whatsgood/nexus",
  "version": "0.24.0",
  "description": "A load balancing blockchain RPC reverse proxy, written in TypeScript",
  "private": false,
  "access": "public",
  "keywords": [
    "blockchain",
    "ethereum",
    "rpc",
    "proxy",
    "load-balancer"
  ],
  "author": {
    "name": "Kerem Kazan",
    "email": "kerem@whatsgood.dog"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/whats-good/nexus"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsup",
    "dev": "ts-node -r tsconfig-paths/register src/example/index.ts",
    "dev:client": "ts-node -r tsconfig-paths/register src/example/client.ts",
    "prepublish": "turbo build --filter=@whatsgood/nexus",
    "typecheck": "tsc",
    "lint": "eslint src/",
    "lint:fix": "pnpm lint lint --fix",
    "test:unit": "echo \"Error: no tests found\" && exit 0",
    "test:watch": "vitest --config ./vitest.config.ts",
    "test:unit:coverage": "pnpm test:unit --coverage"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.7.0",
    "@whatwg-node/fetch": "0.9.18",
    "@whatwg-node/server": "0.9.34",
    "eventemitter3": "^5.0.1",
    "path-to-regexp": "^6.2.1",
    "pino": "^8.17.0",
    "pino-pretty": "^10.2.3",
    "tsyringe": "^4.8.0",
    "uuid": "^10.0.0",
    "vitest": "0.34.5",
    "reflect-metadata": "^0.2.2",
    "ws": "^8.17.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.10",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint-config-custom": "workspace:*",
    "express": "^4.18.2",
    "msw": "^1.3.2",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.1.3",
    "typescript": "5.2.2"
  }
}
