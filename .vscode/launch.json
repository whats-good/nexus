{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nexus",
      "runtimeExecutable": "ts-node",
      "args": [
        "-r",
        "tsconfig-paths/register",
        "${workspaceFolder}/packages/nexus/src/index.ts"
      ],
      "cwd": "${workspaceFolder}/packages/nexus",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    }
  ]
}
